<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jehc.xtmodules.xtmodel.Xt_Province">
	<!--初始化分页-->
	<select id="getXtProvinceListByCondition" resultType="jehc.xtmodules.xtmodel.Xt_Province" parameterType="map">
		SELECT
			`xt_provinceID`,
			`xt_provinceName`,
			`xt_provinceUpID`,
			`xt_provinceUpIdNum`,
			`xt_provincePath`,
			`xt_provinceType`,
			`xt_provinceTypeNum`,
			`xt_provinceShortName`,
			`xt_provinceSpell`,
			`xt_provinceAreaId`,
			`xt_provincePostCode`
		FROM 
			xt_province
		WHERE 1=1
		<if test="null !=xt_provinceName">
			AND instr(!=xt_provinceName,#{!=xt_provinceName})
		</if>
	</select>

	<!--查询对象-->
	<select id="getXtProvinceById" resultType="jehc.xtmodules.xtmodel.Xt_Province" parameterType="string">
		SELECT
			`xt_provinceID`,
			`xt_provinceName`,
			`xt_provinceUpID`,
			`xt_provinceUpIdNum`,
			`xt_provincePath`,
			`xt_provinceType`,
			`xt_provinceTypeNum`,
			`xt_provinceShortName`,
			`xt_provinceSpell`,
			`xt_provinceAreaId`,
			`xt_provincePostCode`
		FROM 
			xt_province
		WHERE xt_provinceID=#{xt_provinceID}
	</select>

	<!--添加-->
	<insert id="addXtProvince" parameterType="jehc.xtmodules.xtmodel.Xt_Province">
		INSERT INTO
			xt_province
			(
			`xt_provinceID`,
			`xt_provinceName`,
			`xt_provinceUpID`,
			`xt_provinceUpIdNum`,
			`xt_provincePath`,
			`xt_provinceType`,
			`xt_provinceTypeNum`,
			`xt_provinceShortName`,
			`xt_provinceSpell`,
			`xt_provinceAreaId`,
			`xt_provincePostCode`
			)
			VALUES
			(
			#{xt_provinceID},
			#{xt_provinceName},
			#{xt_provinceUpID},
			#{xt_provinceUpIdNum},
			#{xt_provincePath},
			#{xt_provinceType},
			#{xt_provinceTypeNum},
			#{xt_provinceShortName},
			#{xt_provinceSpell},
			#{xt_provinceAreaId},
			#{xt_provincePostCode}
			)
	</insert>

	<!--修改-->
	<update id="updateXtProvince" parameterType="jehc.xtmodules.xtmodel.Xt_Province">
		UPDATE
			xt_province
		SET
			`xt_provinceID` = #{xt_provinceID},
			`xt_provinceName` = #{xt_provinceName},
			`xt_provinceUpID` = #{xt_provinceUpID},
			`xt_provinceUpIdNum` = #{xt_provinceUpIdNum},
			`xt_provincePath` = #{xt_provincePath},
			`xt_provinceType` = #{xt_provinceType},
			`xt_provinceTypeNum` = #{xt_provinceTypeNum},
			`xt_provinceShortName` = #{xt_provinceShortName},
			`xt_provinceSpell` = #{xt_provinceSpell},
			`xt_provinceAreaId` = #{xt_provinceAreaId},
			`xt_provincePostCode` = #{xt_provincePostCode}
		WHERE xt_provinceID=#{xt_provinceID}
	</update>

	<!--删除-->
	<delete id="delXtProvince" parameterType="map">
		delete from xt_province where xt_provinceID in
		<foreach item="item" index="index" collection="xt_provinceID" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
</mapper>