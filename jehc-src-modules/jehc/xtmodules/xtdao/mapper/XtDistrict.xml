<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jehc.xtmodules.xtmodel.XtDistrict">
	<!--初始化分页-->
	<select id="getXtDistrictListByCondition" resultType="jehc.xtmodules.xtmodel.XtDistrict" parameterType="map">
		SELECT
			`xt_districtID`,
			`xt_districtName`,
			`xt_districtUpID`,
			`xt_districtUpIdNum`,
			`xt_districtPath`,
			`xt_districtType`,
			`xt_districtTypeNum`,
			`xt_districtShortName`,
			`xt_districtSpell`,
			`xt_districtAreaId`,
			`xt_districtPostCode`
		FROM 
			xt_district
		WHERE 1=1
		<if test="null != xt_cityID and '' != xt_cityID">
			AND xt_districtUpID = #{xt_cityID}
		</if>
		<if test="null != xt_districtName and '' != xt_districtName">
			AND instr(!=xt_districtName,#{!=xt_districtName})
		</if>
	</select>

	<!--查询对象-->
	<select id="getXtDistrictById" resultType="jehc.xtmodules.xtmodel.XtDistrict" parameterType="string">
		SELECT
			`xt_districtID`,
			`xt_districtName`,
			`xt_districtUpID`,
			`xt_districtUpIdNum`,
			`xt_districtPath`,
			`xt_districtType`,
			`xt_districtTypeNum`,
			`xt_districtShortName`,
			`xt_districtSpell`,
			`xt_districtAreaId`,
			`xt_districtPostCode`
		FROM 
			xt_district
		WHERE xt_districtID=#{xt_districtID}
	</select>

	<!--添加-->
	<insert id="addXtDistrict" parameterType="jehc.xtmodules.xtmodel.XtDistrict">
		INSERT INTO
			xt_district
			(
			`xt_districtID`,
			`xt_districtName`,
			`xt_districtUpID`,
			`xt_districtUpIdNum`,
			`xt_districtPath`,
			`xt_districtType`,
			`xt_districtTypeNum`,
			`xt_districtShortName`,
			`xt_districtSpell`,
			`xt_districtAreaId`,
			`xt_districtPostCode`
			)
			VALUES
			(
			#{xt_districtID},
			#{xt_districtName},
			#{xt_districtUpID},
			#{xt_districtUpIdNum},
			#{xt_districtPath},
			#{xt_districtType},
			#{xt_districtTypeNum},
			#{xt_districtShortName},
			#{xt_districtSpell},
			#{xt_districtAreaId},
			#{xt_districtPostCode}
			)
	</insert>

	<!--修改-->
	<update id="updateXtDistrict" parameterType="jehc.xtmodules.xtmodel.XtDistrict">
		UPDATE
			xt_district
		SET
			`xt_districtID` = #{xt_districtID},
			`xt_districtName` = #{xt_districtName},
			`xt_districtUpID` = #{xt_districtUpID},
			`xt_districtUpIdNum` = #{xt_districtUpIdNum},
			`xt_districtPath` = #{xt_districtPath},
			`xt_districtType` = #{xt_districtType},
			`xt_districtTypeNum` = #{xt_districtTypeNum},
			`xt_districtShortName` = #{xt_districtShortName},
			`xt_districtSpell` = #{xt_districtSpell},
			`xt_districtAreaId` = #{xt_districtAreaId},
			`xt_districtPostCode` = #{xt_districtPostCode}
		WHERE xt_districtID=#{xt_districtID}
	</update>

	<!--删除-->
	<delete id="delXtDistrict" parameterType="map">
		delete from xt_district where xt_districtID in
		<foreach item="item" index="index" collection="xt_districtID" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
</mapper>