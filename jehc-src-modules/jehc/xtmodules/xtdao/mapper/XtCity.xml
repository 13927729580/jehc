<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jehc.xtmodules.xtmodel.XtCity">
	<!--初始化分页-->
	<select id="getXtCityListByCondition" resultType="jehc.xtmodules.xtmodel.XtCity" parameterType="map">
		SELECT
			`xt_cityID`,
			`xt_cityName`,
			`xt_cityUpID`,
			`xt_cityUpIdNum`,
			`xt_cityPath`,
			`xt_cityType`,
			`xt_cityTypeNum`,
			`xt_cityShortName`,
			`xt_citySpell`,
			`xt_cityAreaID`,
			`xt_cityPostCode`
		FROM 
			xt_city
		WHERE 1=1
		<if test="null != xt_provinceID and '' != xt_provinceID">
			AND xt_cityUpID = #{xt_provinceID}
		</if>
		<if test="null != xt_cityName and '' != xt_cityName">
			AND instr(!=xt_cityName,#{!=xt_cityName})
		</if>
	</select>

	<!--查询对象-->
	<select id="getXtCityById" resultType="jehc.xtmodules.xtmodel.XtCity" parameterType="string">
		SELECT
			`xt_cityID`,
			`xt_cityName`,
			`xt_cityUpID`,
			`xt_cityUpIdNum`,
			`xt_cityPath`,
			`xt_cityType`,
			`xt_cityTypeNum`,
			`xt_cityShortName`,
			`xt_citySpell`,
			`xt_cityAreaID`,
			`xt_cityPostCode`
		FROM 
			xt_city
		WHERE xt_cityID=#{xt_cityID}
	</select>

	<!--添加-->
	<insert id="addXtCity" parameterType="jehc.xtmodules.xtmodel.XtCity">
		INSERT INTO
			xt_city
			(
			`xt_cityID`,
			`xt_cityName`,
			`xt_cityUpID`,
			`xt_cityUpIdNum`,
			`xt_cityPath`,
			`xt_cityType`,
			`xt_cityTypeNum`,
			`xt_cityShortName`,
			`xt_citySpell`,
			`xt_cityAreaID`,
			`xt_cityPostCode`
			)
			VALUES
			(
			#{xt_cityID},
			#{xt_cityName},
			#{xt_cityUpID},
			#{xt_cityUpIdNum},
			#{xt_cityPath},
			#{xt_cityType},
			#{xt_cityTypeNum},
			#{xt_cityShortName},
			#{xt_citySpell},
			#{xt_cityAreaID},
			#{xt_cityPostCode}
			)
	</insert>

	<!--修改-->
	<update id="updateXtCity" parameterType="jehc.xtmodules.xtmodel.XtCity">
		UPDATE
			xt_city
		SET
			`xt_cityID` = #{xt_cityID},
			`xt_cityName` = #{xt_cityName},
			`xt_cityUpID` = #{xt_cityUpID},
			`xt_cityUpIdNum` = #{xt_cityUpIdNum},
			`xt_cityPath` = #{xt_cityPath},
			`xt_cityType` = #{xt_cityType},
			`xt_cityTypeNum` = #{xt_cityTypeNum},
			`xt_cityShortName` = #{xt_cityShortName},
			`xt_citySpell` = #{xt_citySpell},
			`xt_cityAreaID` = #{xt_cityAreaID},
			`xt_cityPostCode` = #{xt_cityPostCode}
		WHERE xt_cityID=#{xt_cityID}
	</update>

	<!--删除-->
	<delete id="delXtCity" parameterType="map">
		delete from xt_city where xt_cityID in
		<foreach item="item" index="index" collection="xt_cityID" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
</mapper>